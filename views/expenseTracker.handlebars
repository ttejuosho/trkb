<main role="main">
  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container mt-4">
      <p><button
          id="newExpenseBtn"
          class="btn btn-sm btn-outline-dark"
          data-toggle="modal"
          data-target="#newExpenseModal"
        >Create New Expense</button></p>
      <table id="expenseTable" class="table table-striped" style="width: 100%;">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Item</th>
            <th scope="col">Amount</th>
            <th scope="col">Category</th>
            <th scope="col">Date</th>
            <th scope="col">Notes</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>

      {{! New Expense Modal }}
      <div
        class="modal"
        id="newExpenseModal"
        data-backdrop="static"
        data-keyboard="false"
        tabindex="-1"
        aria-labelledby="newExpenseModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title"><i
                  class="fas fa-location-arrow text-primary pl-3 mr-2"
                ></i>
                <span id="newExpenseModalLabel"> New Expense</span>
              </h5>
            </div>

            <form id="newExpenseForm" action="/api/expense" method="POST">
              <div class="modal-body pt-0">
                <div class="col-12 justify-content-center">
                  <p class="text-success mb-0 mb-2 message"></p>
                  <p class="text-danger mb-0 mb-2 errorMessage"></p>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0 required"
                      for="item"
                    >Item</label>
                    <input
                      type="text"
                      class="form-control"
                      id="item"
                      name="item"
                      value="{{item}}"
                    />
                    <div
                      class="newExpenseServerMessages text-danger itemError mb-2"
                    >
                    </div>
                  </div>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0 required"
                      for="expenseCategory"
                    >Category</label>
                    <input
                      type="text"
                      class="form-control"
                      id="expenseCategory"
                      name="expenseCategory"
                      value="{{expenseCategory}}"
                    />
                    <div
                      class="newExpenseServerMessages text-danger expenseCategoryError mb-2"
                    >
                    </div>
                  </div>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0 required"
                      for="expenseAmount"
                    >Amount</label>
                    <input
                      type="text"
                      class="form-control"
                      id="expenseAmount"
                      name="expenseAmount"
                      value="{{expenseAmount}}"
                    />
                    <div
                      class="newExpenseServerMessages text-danger expenseAmountError mb-2"
                    >
                    </div>
                  </div>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0 required"
                      for="expenseDate"
                    >Date</label>
                    <input
                      type="text"
                      class="form-control"
                      id="expenseDate"
                      name="expenseDate"
                      value="{{expenseDate}}"
                    />
                    <div
                      class="newExpenseServerMessages text-danger expenseDateError mb-2"
                    >
                    </div>
                  </div>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0"
                      for="notes"
                    >Notes</label>
                    <textarea
                      type="text"
                      class="form-control"
                      id="notes"
                      name="notes"
                      value="{{notes}}"
                      rows="2"
                    ></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-sm btn-outline-danger"
                  id="closeNewExpenseModal"
                >Cancel</button>
                <button
                  type="button"
                  class="btn btn-sm btn-outline-dark"
                  id="saveNewExpense"
                >Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      {{! New Expense Modal End }}

      {{! Delete Confirmation Modal }}
      <div
        class="modal"
        id="deleteConfirmationModal"
        tabindex="-1"
        aria-labelledby="deleteConfirmationModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5
                class="modal-title text-danger mb-2"
                id="deleteConfirmationModalLabel"
              ><i class="fas fa-exclamation-triangle"></i> Delete ke ??</h5>

              <h5
                class="modal-title text-success mb-2 d-none"
                id="deleteSuccessConfirmationModalLabel"
              >
                <i class="fas fa-check-circle"></i>
                Done !!
              </h5>
            </div>
            <div class="modal-body pt-1">
              <p id="confirmDeleteErrorMesaage" class="text-danger"></p>
              <p
                id="confirmDeleteSuccessMesaage"
                class="text-success d-none"
              ><span id="userLocationSpan"></span>
                deleted.</p>
              <p id="deleteModalBody" class="">Delete na bad thing, think am
                well well o. Click Delete if your head correct or click Cancel
                if your head correct.</p>

              <p id="actionMessage" class="text-danger"></p>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-outline-danger"
                id="closeDeleteConfirmationModal"
              >Close</button>
              <button
                type="button"
                class="btn btn-outline-dark continueDelete"
                data-option=""
                data-id=""
                id="continueDelete"
              >
                Delete</button>
            </div>
          </div>
        </div>
      </div>
      {{! Delete Confirmation Modal End }}
    </div>
  </div>
  <script type="text/javascript" src="/assets/js/expenseTracker.js"></script>
</main>