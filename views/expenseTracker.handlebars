<main role="main">
  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container mt-4">
      <p><button
          id="newExpenseBtn"
          class="btn btn-sm btn-outline-dark"
          data-toggle="modal"
          data-target="#newExpenseModal"
        >Create New Expense</button></p>
      <table id="expenseTable" class="table table-striped" style="width: 100%;">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Item</th>
            <th scope="col">Amount</th>
            <th scope="col">Category</th>
            <th scope="col">Date</th>
            <th scope="col">Notes</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>

      {{! New Expense Modal }}
      <div
        class="modal"
        id="newExpenseModal"
        data-backdrop="static"
        data-keyboard="false"
        tabindex="-1"
        aria-labelledby="newExpenseModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title"><i
                  class="fas fa-location-arrow text-primary pl-3 mr-2"
                ></i>
                <span id="newExpenseModalLabel"> New Expense</span>
              </h5>
            </div>

            <form id="newExpenseForm" action="/api/expense" method="POST">
              <div class="modal-body pt-0">
                <div class="col-12 justify-content-center">
                  <p class="text-success mb-0 mb-2 message"></p>
                  <p class="text-danger mb-0 mb-2 errorMessage"></p>
                  <input
                    type="hidden"
                    value="{{expenseId}}"
                    id="expenseId"
                    name="expenseId"
                  />
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0 required"
                      for="item"
                    >Item</label>
                    <input
                      type="text"
                      class="form-control"
                      id="item"
                      name="item"
                      value="{{item}}"
                    />
                    <div
                      class="newExpenseServerMessages text-danger itemError mb-2"
                    >
                    </div>
                  </div>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0 required"
                      for="expenseCategory"
                    >Category</label>
                    {{!-- <input
                      type="text"
                      class="form-control"
                      id="expenseCategory"
                      name="expenseCategory"
                      value="{{expenseCategory}}"
                    /> --}}
                    <select
                      id="expenseCategory"
                      class="form-control mb-2"
                      name="expenseCategory"
                    >
                      {{#if expenseCategory}}
                        <option
                          value="{{expenseCategory}}"
                        >{{expenseCategory}}</option>
                      {{else}}
                        <option value="">Choose Category</option>
                      {{/if}}
                      {{#unless expenseCategory}}
                        <option value="Food">Food</option>
                        <option value="Transportation">Transportation</option>
                        <option value="Housing">Housing</option>
                        <option value="Utilities">Utilities</option>
                        <option value="Clothing">Clothing</option>
                        <option value="Household">Household</option>
                        <option value="Personal">Personal</option>
                        <option value="Education">Education</option>
                        <option
                          value="Gifts & Donations"
                        >Gifts/Donations</option>
                        <option value="Insurance">Insurance</option>
                        <option value="Medical">Medical</option>
                        <option value="Investing">Investing</option>
                        <option value="Savings">Savings</option>
                        <option value="Debt Payment">Debt Payment</option>
                        <option value="Entertainment">Entertainment</option>
                        <option value="Miscellaneous">Miscellaneous</option>
                      {{/unless}}
                    </select>
                    <div
                      class="newExpenseServerMessages text-danger expenseCategoryError mb-2"
                    >
                    </div>
                  </div>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0 required"
                      for="expenseAmount"
                    >Amount</label>
                    <input
                      type="text"
                      class="form-control"
                      id="expenseAmount"
                      name="expenseAmount"
                      value="{{expenseAmount}}"
                    />
                    <div
                      class="newExpenseServerMessages text-danger expenseAmountError mb-2"
                    >
                    </div>
                  </div>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0 required"
                      for="expenseDate"
                    >Date</label>
                    <div class="form-group">
                      <div
                        class="input-group date"
                        id="expenseDate"
                        data-target-input="nearest"
                      >
                        <input
                          type="text"
                          class="form-control datetimepicker-input"
                          data-target="#expenseDate"
                        />
                        <div
                          class="input-group-append"
                          data-target="#expenseDate"
                          data-toggle="datetimepicker"
                        >
                          <div class="input-group-text"><i
                              class="fa fa-calendar"
                            ></i></div>
                        </div>
                      </div>
                    </div>
                    <div
                      class="newExpenseServerMessages text-danger expenseDateError mb-2"
                    >
                    </div>
                  </div>
                  <div class="mb-2">
                    <label
                      class="font-weight-bold mb-0"
                      for="notes"
                    >Notes</label>
                    <textarea
                      type="text"
                      class="form-control"
                      id="notes"
                      name="notes"
                      value="{{notes}}"
                      rows="2"
                    ></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-sm btn-outline-danger"
                  id="closeNewExpenseModal"
                >Cancel</button>
                <button
                  type="button"
                  class="btn btn-sm btn-outline-dark"
                  id="saveNewExpense"
                >Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      {{! New Expense Modal End }}

      {{! Delete Confirmation Modal }}
      <div
        class="modal"
        id="deleteConfirmationModal"
        tabindex="-1"
        aria-labelledby="deleteConfirmationModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5
                class="modal-title text-danger mb-2"
                id="deleteConfirmationModalLabel"
              ><i class="fas fa-exclamation-triangle"></i> Delete ke ??</h5>

              <h5
                class="modal-title text-success mb-2 d-none"
                id="deleteSuccessConfirmationModalLabel"
              >
                <i class="fas fa-check-circle"></i>
                Done !!
              </h5>
            </div>
            <div class="modal-body pt-1">
              <p id="confirmDeleteErrorMessage" class="text-danger"></p>
              <p
                id="confirmDeleteSuccessMessage"
                class="text-success d-none"
              ><span id="expenseItemSpan"></span>
                deleted.</p>
              <p id="deleteModalBody" class="">Delete na bad thing, think am
                well well o. Click Delete if your head correct or click Cancel
                if your head correct.</p>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-outline-danger"
                id="closeDeleteConfirmationModal"
              >Close</button>
              <button
                type="button"
                class="btn btn-outline-dark continueDelete"
                data-option=""
                data-id=""
                id="continueDelete"
              >
                Delete</button>
            </div>
          </div>
        </div>
      </div>
      {{! Delete Confirmation Modal End }}
    </div>
  </div>

  <script type="text/javascript" src="/assets/js/expenseTracker.js"></script>
</main>