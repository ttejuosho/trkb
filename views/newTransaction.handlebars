<main role="main">
   <div class="jumbotron">
        <div class="container">
            <h1 class="display-3 text-center">Fin-Rec System</h1>
            
            {{#if transactionSaved}}
                <p class="text-success">Transaction has been saved !!</p>
                <p><a href="/transaction/detail/{{transactionUID}}"> View transaction details</a></p>
                <p><a href="/transaction/new">Enter new transaction</a> </p>
            {{/if}}
            
            <form id="newTransactionForm" action="/transaction/new" method="POST">
                <div class="form-row form-row justify-content-center">
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <legend class="col-form-label pt-0 font-weight-bold required">New Transaction Information</legend>
                        <fieldset class="form-group mb-0">
                            <div class="row ml-0">
                                <div class="col-sm-12 pl-0">
                                    <select id="transactionType" class="form-control mb-2" name="transactionType">
                                        <option value="">Choose Transaction Type</option>
                                        <option value="Transfer">Transfer</option>
                                        <option value="Withdrawal">Withdrawal</option>
                                        <option value="Deposit">Deposit</option>
                                    </select>
                                </div>
                                {{#if errors}}
                                {{#each errors}}
                                {{#ifEquals param "transactionType"}}
                                <div class="messages text-danger mb-2">{{msg}}</div>
                                {{/ifEquals}}
                                {{/each}}
                                {{/if}}
                            </div>
                        </fieldset>

                        <fieldset class="form-group mb-0">
                            <div class="row ml-0">
                                
                                <div class="col-sm-12 pl-0">
                                    <select id="transactionTerminal" class="form-control mb-2"
                                        name="transactionTerminal">
                                        {{#if transactionTerminal}}
                                        <option value="{{transactionTerminal}}">{{transactionTerminal}}</option>
                                        {{else}}
                                        <option value="">Choose Transaction Terminal</option>
                                        {{/if}}
                                        <option value="Pay Center">Pay Center</option>
                                        <option value="OPay">OPay</option>
                                        <option value="Kolo Money">Kolo Money</option>
                                    </select>
                                </div>
                                {{#if errors}}
                                {{#each errors}}
                                {{#ifEquals param "transactionTerminal"}}
                                <div class="messages text-danger">{{msg}}</div>
                                {{/ifEquals}}
                                {{/each}}
                                {{/if}}
                            </div>
                        </fieldset>

                        <div class="mb-2">
                        <label class="sr-only" for="amountReceived">Amount Received</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                            <div class="input-group-text">&#8358</div>
                            </div>
                            <input type="text" class="form-control" id="amountReceived" name="amountReceived" placeholder="Amount Received" value="{{amountReceived}}">
                        </div>
                        {{#if errors}}
                        {{#each errors}}
                        {{#ifEquals param "amountReceived"}}
                        <div class="messages text-danger mb-2">{{msg}}</div>
                        {{/ifEquals}}
                        {{/each}}
                        {{/if}}
                        </div>

                        <div class="mb-2">
                        <label class="sr-only" for="amountPaid">Amount Paid</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                            <div class="input-group-text">&#8358</div>
                            </div>
                            <input type="text" class="form-control" id="amountPaid" name="amountPaid" placeholder="Amount Paid" value="{{amountPaid}}">
                            </div>
                        {{#if errors}}
                        {{#each errors}}
                        {{#ifEquals param "amountPaid"}}
                        <div class="messages text-danger mb-2">{{msg}}</div>
                        {{/ifEquals}}
                        {{/each}}
                        {{/if}}
                        </div>

                        <div class="mb-2">
                        <label class="sr-only" for="transactionCharge">Amount Charged</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                            <div class="input-group-text">&#8358</div>
                            </div>
                            <input type="text" class="form-control" id="transactionCharge" name="transactionCharge" placeholder="Amount Charged" value="{{transactionCharge}}">
                        </div>
                            {{#if errors}}
                            {{#each errors}}
                            {{#ifEquals param "transactionCharge"}}
                            <div class="messages text-danger mb-2">{{msg}}</div>
                            {{/ifEquals}}
                            {{/each}}
                            {{/if}}
                        </div>

                        <div class="mb-2">
                        <label class="sr-only" for="posCharge">POS Charge</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                            <div class="input-group-text">&#8358</div>
                            </div>
                            <input type="text" class="form-control" id="posCharge" name="posCharge" placeholder="POS Charge" value="{{posCharge}}">
                        </div>
                            {{#if errors}}
                            {{#each errors}}
                            {{#ifEquals param "posCharge"}}
                            <div class="messages text-danger mb-2">{{msg}}</div>
                            {{/ifEquals}}
                            {{/each}}
                            {{/if}}
                        </div>

                        <legend class="col-form-label pt-0 font-weight-bold">Customer Information</legend>

                        <div class="mb-2">
                            <input type="text" class="form-control" id="customerName" name="customerName"
                                placeholder="Customer Name" value="{{customerName}}" />
                        </div>
                        <div class="mb-2">
                            <input type="text" class="form-control" id="customerPhone" name="customerPhone"
                                placeholder="Customer Phone" value="{{customerPhone}}" />
                        </div>
                        <div class="mb-2">
                            <input type="text" class="form-control" id="customerEmail" name="customerEmail"
                                placeholder="Customer Email" value="{{customerEmail}}" />
                        </div>

                        <button type="submit" class="btn btn-block btn-lg btn-dark" id="saveRecord">Save</button>
                    </div>

                </div>
            </form>

        </div>
    </div>
    </main>